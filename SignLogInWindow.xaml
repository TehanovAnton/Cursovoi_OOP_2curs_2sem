<Window x:Class="KursovoiProectCSharp.SignLogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KursovoiProectCSharp"
        mc:Ignorable="d"
        Title="SignLogInWindow" Height="450" Width="800">
    
    <Grid>
        <StackPanel>
            <Label Content="{Binding MessageLabel}" FontSize="30" 
               HorizontalAlignment="Center"/>
            
            <Label Content="NickName" FontSize="30" 
               HorizontalAlignment="Center"/>
            <TextBox x:Name="nickNameInput" 
                     Text="{Binding _NickName}"/>

            <Label Content="Password" FontSize="30" 
               HorizontalAlignment="Center"/>
            <TextBox x:Name="passwordInput" 
                     Text="{Binding _Password}"/>

            <Button Content="Log In" 
                    Command="{Binding LogInUser}"/>

            <Button Content="Register" 
                    Command="{Binding Register}"/>
        </StackPanel>

        <Frame NavigationUIVisibility="Hidden"
               Content="{Binding LogSignInPage}"/>
    </Grid>
</Window>
