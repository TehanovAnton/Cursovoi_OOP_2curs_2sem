<Page x:Class="KursovoiProectCSharp.View.TrainingCardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KursovoiProectCSharp.View"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="500"
      Title="TrainingCardPage"
      Background="Gray">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--question-->
        <Border BorderBrush="Black" BorderThickness="0 0 0 5" Grid.Row="0" Margin="10 10 10 10">
            <TextBlock TextAlignment="Center" FontSize="20" Text="quastion" Width="500"/>
        </Border>

        <!--answer-->
        <Border BorderBrush="Black" BorderThickness="0 0 0 5" Grid.Row="1" Margin="10 10 10 10">
            <TextBlock Grid.Row="1" TextAlignment="Center" FontSize="20" Text="answer" Width="500" />
        </Border>

        <!--result buttons-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0">
                <Button Content="Bad" Margin="10 10 10 10"/>
            </Grid>

            <Grid Grid.Column="1">
                <Button Content="Normal" Margin="10 10 10 10"/>
            </Grid>

            <Grid Grid.Column="2">
                <Button Content="Exelent" Margin="10 10 10 10"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
