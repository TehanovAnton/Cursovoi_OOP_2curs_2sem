                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="{Binding AnswearText}" Margin="4 4 4 4"/>

                        <Image Grid.Row="1" 
                           Source="{Binding AnswearImage}">
                        </Image>
                    </Grid>
                </GroupBox>
            </Grid>

