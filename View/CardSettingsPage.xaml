<Page x:Class="KursovoiProectCSharp.View.CardSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KursovoiProectCSharp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CardSettingsPage">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" Background="Gray">
            <Button Background="Gray" Style="{DynamicResource CloseIcon}" 
                    Command="{Binding CloseMenu}">
                <Image Width="30" Height="30" Source="{Binding RollUpIcon}"/>
            </Button>

            <Button HorizontalContentAlignment="Center" Margin="4 4 4 4"
                    Command="{Binding LeaveTraining}">
                <Label Content="Leave"/>
            </Button>

            <Button Content="Edit Card" Command="{Binding EditCard}"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Background="White" Opacity="0.8" />
    </Grid>
</Page>
