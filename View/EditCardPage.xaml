<Page x:Class="KursovoiProectCSharp.View.EditCardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KursovoiProectCSharp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditCardPage" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="Question"/>
            <TextBox Text="{Binding QuestionText}"
                     Margin="5 5 5 5"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <Label Content="Answer"/>
            <TextBox Text="{Binding AnswearText}" Margin="5 5 5 5"/>

            <Button Content="Edit Card" Command="{Binding EditCard}"/>
        </StackPanel>
    </Grid>
</Page>
